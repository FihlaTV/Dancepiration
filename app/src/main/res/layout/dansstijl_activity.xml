<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alle dansstijlen"
        android:id="@+id/alledansstijlen"
        android:layout_gravity="center_horizontal"
        android:onClick="alledansstijlen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ballet"
        android:id="@+id/ballet"
        android:layout_gravity="center_horizontal"
        android:onClick="ballet"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modern"
        android:id="@+id/modern"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streetdance"
        android:id="@+id/streetdance"
        android:layout_gravity="center_horizontal" />
</LinearLayout>