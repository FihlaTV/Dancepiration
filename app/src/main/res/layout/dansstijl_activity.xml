<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1d0ca">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ballet"
        android:id="@+id/ballet"
        android:layout_gravity="center_horizontal"
        android:onClick="ballet"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modern"
        android:id="@+id/modern"
        android:layout_gravity="center_horizontal"
        android:onClick="modern"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Streetdance"
        android:id="@+id/streetdance"
        android:layout_gravity="center_horizontal"
        android:onClick="streetdance"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Variaties"
        android:id="@+id/button9"
        android:layout_gravity="center_horizontal"
        android:onClick="variaties"/>
</LinearLayout>